<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Administrator</title>
</head>

<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Admin Panel</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="#">Home</a>
                </li>
                <li>
                    <a href="#">Orders</a>
                </li>
                <li>
                    <a href="#">Restaurants</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <h1>Add New Restaurant</h1>
        <form method="POST" action="/admin">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="address" required>
            </div>
            <div class="form-group">
                <label for="area">Area</label>
                <input type="text" class="form-control" id="area" name="area" required>
            </div>
            <div class="form-group">
                <label for="cuisines">Cuisines</label>
                <select class="form-control" name="cuisines" required>
                    <option>North Indian</option>
                    <option>Tibetian</option>
                    <option>Sea-Food</option>
                    <option>Mughlai</option>
                    <option>Punjabi</option>
                    <option>Chinese</option>
                    <option>South Indian</option>
                    <option>Italian</option>
                    <option>Mexican</option>
                </select>
            </div>
            <div class="form-group">
                <label for="cost">Average Cost</label>
                <input type="text" class="form-control" id="cost" name="cost" required>
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <select class="form-control" name="category" required>
                    <option>Romantic Dine Out</option>
                    <option>Quick Bite</option>
                    <option>Family Time</option>
                    <option>Self Company</option>
                    <option>Theme Exotica</option>
                    <option>In House Buffet</option>
                </select>
            </div>
            <div class="form-group">
                <label for="opening">Opening Hours</label>
                <input class="form-control" id="opening" name="opening" type="time" required>
            </div>
            <div class="form-group">
                <label for="closing">Closing Hours</label>
                <input class="form-control" id="closing" name="closing" type="time" required>
            </div>
            <div class="form-group">
                <label for="knownFor">Known For</label>
                <input class="form-control" id="knownFor" name="knownFor" type="text" required>
            </div>
            <div class="form-group">
                <label for="photo">Photo Link</label>
                <input class="form-control" id="photo" name="photo" type="url" required>
            </div>
            <div class="form-check">
                <label class="form-check-label">Mode of Payment: </label>
                <input type="checkbox" class="form-check-input" name="cash" id="cash" value="Cash"> Cash
                <input type="checkbox" class="form-check-input" name="card" id="card" value="Credit Card/Debit Card"> Credit Card/ Debit Card
                <input type="checkbox" class="form-check-input" name="eWallet" id="e-wallet" value="E- Wallets"> E-Wallets
            </div>
            <div class="form-group">
                <label for="contact">Contact</label>
                <input type="text" class="form-control" name="number" id="contact-number" placeholder="Contact Number" required>
                <input type="url" class="form-control" name="website" id="website" placeholder="Restaurant Website">
            </div>
            <div class="form-group">
                <label for="restaurant-id">Restaurant ID</label>
                <input type="email" class="form-control" name="restaurantId" name="resturant-id" placeholder="Restaurant ID" required>
                <input type="text" class="form-control" name="restaurantPassword" name="restaurant-password" placeholder="Restaurant Password" required>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</body>

</html>